<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:orientation="vertical"
    tools:context=".User.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_footer"
        android:layout_height="match_parent">
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="3"> <!-- Tổng weight là 4 cho 4 LinearLayout con -->

            <!-- Cột 1 -->
            <LinearLayout
                android:id="@+id/btn_quanliSach"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qlsach"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_book" />

                <TextView
                    android:id="@+id/tv_qlsach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QL.Sach"
                    android:textColor="@color/white" />
            </LinearLayout>


            <!-- Cột 2 -->
            <LinearLayout
                android:id="@+id/btn_quanliNguoiDung"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_quanlireader"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_quanlitk" />

                <TextView
                    android:id="@+id/tv_quanlireader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QL. Người dùng"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Cột 3 -->
            <LinearLayout
                android:id="@+id/btn_taiKhoan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_Taikhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_account" />

                <TextView
                    android:id="@+id/tv_Taikhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài Khoản"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>