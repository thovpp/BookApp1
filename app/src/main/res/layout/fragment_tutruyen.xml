<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_deep"
    android:orientation="vertical"
    tools:context=".User.MainActivity">

    <FrameLayout
        android:id="@+id/ll_header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_deep"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingStart="10dp"
            android:text="Tủ Truyện"
            android:textColor="#FFFFFF" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:paddingLeft="10dp"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:hint="Tìm kiếm truyện..."
                android:drawableEnd="@drawable/ic_search"
                style="@style/CustomSearchView" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_below="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_deep"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_addNovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:padding="0dp"
                android:text="Thêm Truyện" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:padding="0dp"
                android:text="Bookmarks" />

            <Button
                android:id="@+id/get_all_novel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:padding="0dp"
                android:text="Show Novels" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>