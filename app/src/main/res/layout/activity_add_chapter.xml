<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2B2D30"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:padding="0dp"
        android:backgroundTint="@android:color/transparent"
        android:rotationY="180"
        android:src="@drawable/ic_back_arrow" />

    <!-- Novel Details Layout -->
    <LinearLayout
        android:id="@+id/ll_novel"
        android:layout_below="@id/ib_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="top">

        <!-- CardView with Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/iv_quanlisach_thumb"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_novel_2" />
        </androidx.cardview.widget.CardView>

        <!-- Text Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#343434"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Truyện dài vừa đủ"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tác Giả"
                android:textColor="@color/gray_light"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số chương hiện tại: "
                    android:textColor="@color/gray_light"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_tongsochuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/gray_light"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Add Novel Title -->
    <TextView
        android:id="@+id/titleThem"
        android:layout_below="@+id/ll_novel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Chương Mới"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="24sp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginVertical="24dp" />

    <!-- ScrollView for text input -->
    <ScrollView
        android:layout_below="@+id/titleThem"
        android:layout_width="match_parent"
        android:layout_above="@+id/addChapterButton"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current Chapter Text -->
            <TextView
                android:id="@+id/currentChapterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#36393A"
                android:hint="Chương: chương hiẹn tia +1"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColorHint="#FFFFFF" />

            <!-- Title EditText -->
            <EditText
                android:id="@+id/titleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#36393A"
                android:hint="Tiêu Đề"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textColorHint="#FFFFFF" />

            <!-- Content EditText -->
            <EditText
                android:id="@+id/contentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#36393A"
                android:hint="Nhập nội dung chương..."
                android:textColor="@color/white"
                android:padding="12dp"
                android:textColorHint="#FFFFFF"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top" />
        </LinearLayout>
    </ScrollView>

    <!-- Add Chapter Button -->
    <Button
        android:id="@+id/addChapterButton"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:text="Add Novel"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white" />
</RelativeLayout>
