<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/iv_cungtheloai_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background_novel_2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cungtheloai_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Tại Đại Kết Cục Lại Xuyên Qua Thành Chung Cực Đại" />

    <TextView
        android:id="@+id/tv_cungtheloai_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:ellipsize="end"
        android:textColor="@color/gray_light"
        android:text="Tu tiên" />
</LinearLayout>

