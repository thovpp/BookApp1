<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#393B3F">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/iv_capnhat_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/btn_default"
                tools:srcCompat="@drawable/hoang_hau_vo_duc" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_capnhat_tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:text="Nữ Vương Vô Đức"
                android:textColor="#E7E7E7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_capnhat_theloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fadingEdge="none"
                android:fontFamily="sans-serif"
                android:text="Xuyên Không"
                android:textColor="#757575"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_capnhat_luotxem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="2153"
                    android:textColor="#E7E7E7"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Đã đọc"
                    android:textColor="#757575"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>